

<% content_for :title, "Consumptions" %>
<main class="py-10 lg:pl-72">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-base font-semibold text-gray-900">Consumi</h1>
          <p class="mt-2 text-sm text-gray-700">La tabella dei tuoi consumi registrati fino ad adesso</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <a href="<%= new_admin_consumption_path %>" class="block rounded-md bg-primary/60 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-primary/50 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary/60">Inserisci nuovo</a>
        </div>
      </div>
      <div class="mt-8 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="relative min-w-full divide-y divide-gray-300">
              <thead>
                <tr>
                  <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold whitespace-nowrap text-gray-900 sm:pl-0">ID</th>
                  <th scope="col" class="px-2 py-3.5 text-left text-sm font-semibold whitespace-nowrap text-gray-900">Tipo</th>
                  <th scope="col" class="px-2 py-3.5 text-left text-sm font-semibold whitespace-nowrap text-gray-900">Misura</th>
                  <th scope="col" class="px-2 py-3.5 text-left text-sm font-semibold whitespace-nowrap text-gray-900">Data</th>
                  <th scope="col" class="py-3.5 pr-4 pl-3 whitespace-nowrap sm:pr-0">
                    <span class="sr-only">Edit</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 ">
                  <% @consumptions.each do |consumption| %>
                <tr>
                  <td class="py-2 pr-3 pl-4 text-sm whitespace-nowrap text-gray-500 sm:pl-0"><%= consumption.id %></td>
                  <td class="px-2 py-2 text-xs font-medium whitespace-nowrap text-gray-900"><%= consumption_type_label(consumption) %></td>
                  <td class="px-2 py-2 text-sm whitespace-nowrap text-gray-500"><%= consumption.value.to_s + " " + consumption_measure_label(consumption) %></td>
                  <td class="px-2 py-2 text-sm whitespace-nowrap text-gray-500"><%= format_consumption_date(consumption.date) %></td>
                  <td class="py-2 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-0">
                    <a href="<%= edit_admin_consumption_path(consumption) %>" class="text-primary/60 hover:text-primary/90">Modifica</a>
                  <%= button_to "Elimina", 
                    admin_consumption_path(consumption),
                    class: "text-primary/60 hover:text-primary/90 cursor-pointer",
                    method: :delete,
                    form: {
                      data: {"turbo_confirm": "Sei sicuro di voler eliminare questo consumo?"}
                    } %>
                  </td>
                </tr>
                  <% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>